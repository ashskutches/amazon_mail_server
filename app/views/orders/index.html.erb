<p id="notice"><%= notice %></p>

<h2> <%= "Listing Orders - #{Order.count.to_s}" %> </h2>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.customer.name, "/customers/#{order.customer.id}" %></td>
        <td><%= order.status %></td>
        <td><%= order.amount %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
